# Database
DATABASE_URL=postgresql://fulfil_user:fulfil_pass@postgres:5432/fulfil_erp
POSTGRES_USER=fulfil_user
POSTGRES_PASSWORD=fulfil_pass
POSTGRES_DB=fulfil_erp

# Redis
REDIS_URL=redis://redis:6379/0

# FastAPI
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Webhook secret (for HMAC verification in production)
SHOPIFY_WEBHOOK_SECRET=dev-secret-key-change-in-production

# Inventory
LOW_STOCK_THRESHOLD=10
INVENTORY_SYNC_INTERVAL_SECONDS=300

# Dashboard
DEMO_MODE=true
